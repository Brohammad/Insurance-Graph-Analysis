# MedAssist Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment (development, production, test)
ENVIRONMENT=development
DEBUG=True

# Neo4j Aura Connection
NEO4J_URI=neo4j+s://9ab402cc.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# Google Gemini API
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# PostgreSQL (for persistent conversation memory)
DATABASE_URL=postgresql://medassist:medassist123@localhost:5432/medassist

# Vector Store
CHROMA_PERSIST_DIR=./chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Conversation Memory
MAX_CONVERSATION_MESSAGES=10
SESSION_TIMEOUT_MINUTES=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000

# Security (CHANGE SECRET_KEY IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Sentry (optional - for production error tracking)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Gunicorn (production server)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120

# PostgreSQL Password (for docker-compose)
POSTGRES_PASSWORD=medassist123
